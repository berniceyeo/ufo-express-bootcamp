<!DOCTYPE html>
<html lang="en">
  <%- include('header',{title: "Edit Sighting"}); -%>
  <body>
    <%- include('navbar'); -%>
    <div class="container-fluid text-white bg-image min-vh-100 h-auto">
      <div class="container">
        <div class="mb-4">
          <br />
          <h2>
            Edit Sighting <%= sighting.index %>
          </h2>
        </div>

        <form
          action="/sighting/<%= sighting.index %>?_method=PUT"
          method="POST"
        >
          <div class="row mb-3 justify-content-center">
            <label for="text" class="col-sm-2 col-form-label"
              >Information</label
            >
            <div class="col-sm-8">
              <input
                type="text"
                class="form-control"
                id="text"
                name="text"
                value="<%= sighting.text %>"
              />
            </div>
          </div>
          <div class="row mb-3 justify-content-center">
            <label for="date_time" class="col-sm-2 col-form-label"
              >Date & Time</label
            >
            <div class="col-sm-8">
              <input
                type="datetime-local"
                class="form-control"
                id="date_time"
                name="date_time"
                value="<%=
        sighting.date_time %> "
              />
            </div>
          </div>
          <div class="row mb-3 justify-content-center">
            <label for="city" class="col-sm-2 col-form-label">City</label>
            <div class="col-sm-8">
              <input
                type="text"
                id="city"
                class="form-control"
                name="city"
                value="<%= sighting.city %>"
              />
            </div>
          </div>
          <div class="row mb-3 justify-content-center">
            <label for="state" class="col-sm-2 col-form-label">State</label>
            <div class="col-sm-8">
              <input
                type="text"
                id="state"
                class="form-control"
                name="state"
                value="<%= sighting.state %>"
              />
            </div>
          </div>
          <div class="mb-3 row justify-content-center ">
            <label for="shape" class="col-sm-2 col-form-label"> Shape</label>
            <div class="col-sm-8">
              <input
                type="text"
                id="shape"
                class="form-control"
                name="shape"
                value="<%= sighting.shape
        %>"
              />
            </div>
          </div>

          <div class="mb-3 row justify-content-center">
            <label for="duration" class="col-sm-2 col-form-label"
              >Duration</label
            >
            <div class="col-sm-8">
              <input
                type="text"
                id="duration"
                class="form-control"
                name="duration"
                value="<%=
        sighting.duration %>"
              />
            </div>
          </div>

          <div class="mb-3 row justify-content-center">
            <label for="summary" class="col-sm-2 col-form-label">Summary</label>
            <div class="col-sm-8">
              <input
                type="text"
                class="form-control"
                id="summary"
                name="summary"
                value="<%=
        sighting.summary %> "
              />
            </div>
          </div>
          <div class="mb-3 mt-5 row justify-content-start">
            <div class="d-grid jusitfy-content-start col-sm-3">
              <button type="submit" class="btn btn-info">
                Submit
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <%- include('footer'); -%>
  </body>
</html>
